<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
  <Choose>
	<When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\MachineVisionStepsAndProcesses')">
	  <ItemGroup>
		<ProjectReference Include="..\MachineVisionStepsAndProcesses\MachineVisionStepsAndProcesses.csproj">
		  <Project>{2FD1C84D-683E-4F9A-83CB-74BA642F2E75}</Project>
		  <Name>MachineVisionStepsAndProcesses</Name>
		</ProjectReference>
	  </ItemGroup>
	</When>
	<Otherwise>
	  <ItemGroup>
		<Reference Include="MachineVisionStepsAndProcesses">
		  <HintPath>Externals\MachineVisionStepsAndProcesses\$(BinSubfolder)\MachineVisionStepsAndProcesses.dll</HintPath>
		</Reference>
	  </ItemGroup>
    </Otherwise>
  </Choose>
</Project>