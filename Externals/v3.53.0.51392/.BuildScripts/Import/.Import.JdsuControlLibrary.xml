<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<!-- Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
	<Choose>
		<!-- JdsuControlLibrary is referenced by FractalHardwareSupport and by JdsuDataLibrary, 
	which are both referenced by Fractal. -->
		<When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\JdsuControlLibrary')">
			<ItemGroup>
				<ProjectReference Include="..\JdsuControlLibrary\JdsuControlLibrary.vbproj">
					<Project>{1e4413be-6e05-4dc3-819c-70643e4a2772}</Project>
					<Name>JdsuControlLibrary</Name>
				</ProjectReference>
			</ItemGroup>
		</When>
		<When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\FractalDataLibrary')">
			<ItemGroup>
				<!-- Use the external from the JdsuDataLibrary project -->
				<Reference Include="JdsuControlLibrary">
					<HintPath>..\FractalDataLibrary\Externals\JdsuControlLibrary\$(BinSubfolder)\JdsuControlLibrary.dll</HintPath>
				</Reference>
			</ItemGroup>
		</When>
		<When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\FractalHardwareSupport')">
			<ItemGroup>
				<!-- Use the external from the FractalHardwareSupport project -->
				<Reference Include="JdsuControlLibrary">
					<HintPath>..\FractalHardwareSupport\Externals\JdsuControlLibrary\$(BinSubfolder)\JdsuControlLibrary.dll</HintPath>
				</Reference>
			</ItemGroup>
		</When>
		<When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\Face')">
			<ItemGroup>
				<!-- Use the external from the Face project -->
				<Reference Include="JdsuControlLibrary">
					<HintPath>..\Face\Externals\JdsuDataLibrary\$(BinSubfolder)\JdsuControlLibrary.dll</HintPath>
				</Reference>
			</ItemGroup>
		</When>
		<When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\Fractal')">
			<ItemGroup>
				<!-- Use the external from the Fractal project -->
				<Reference Include="JdsuControlLibrary">
					<HintPath>..\Fractal\Externals\Face\$(BinSubfolder)\JdsuControlLibrary.dll</HintPath>
				</Reference>
			</ItemGroup>
		</When>
		<When Condition="Exists('Externals\Fractal')">
			<ItemGroup>
				<!-- Use binary reference from the Fractal External -->
				<Reference Include="JdsuControlLibrary">
					<HintPath>Externals\Fractal\$(BinSubfolder)\JdsuControlLibrary.dll</HintPath>
				</Reference>
			</ItemGroup>
		</When>
		<When Condition="Exists('Externals\Face')">
			<ItemGroup>
				<!-- Use binary reference from the Face External -->
				<Reference Include="JdsuControlLibrary">
					<HintPath>Externals\Face\$(BinSubfolder)\JdsuControlLibrary.dll</HintPath>
				</Reference>
			</ItemGroup>
		</When>
		<When Condition="Exists('Externals\JdsuDataLibrary')">
			<ItemGroup>
				<!-- Use binary reference from the JdsuDataLibrary External -->
				<Reference Include="JdsuControlLibrary">
					<HintPath>Externals\JdsuDataLibrary\$(BinSubfolder)\JdsuControlLibrary.dll</HintPath>
				</Reference>
			</ItemGroup>
		</When>
		<When Condition="Exists('Externals\FractalHardwareSupport')">
			<ItemGroup>
				<!-- Use binary reference from the FractalHardwareSupport External -->
				<Reference Include="JdsuControlLibrary">
					<HintPath>Externals\FractalHardwareSupport\$(BinSubfolder)\JdsuControlLibrary.dll</HintPath>
				</Reference>
			</ItemGroup>
		</When>
		<Otherwise>
			<ItemGroup>
				<!-- Use binary reference from the JdsuControlLibrary External -->
				<Reference Include="JdsuControlLibrary">
					<HintPath>Externals\JdsuControlLibrary\$(BinSubfolder)\JdsuControlLibrary.dll</HintPath>
				</Reference>
			</ItemGroup>
		</Otherwise>
	</Choose>
</Project>