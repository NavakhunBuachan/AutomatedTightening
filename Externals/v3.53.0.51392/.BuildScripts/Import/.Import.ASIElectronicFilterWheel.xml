<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
  <Choose>
	<When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\ASIElectronicFilterWheel')">
	  <ItemGroup>
		<ProjectReference Include="..\ASIElectronicFilterWheel\ASIElectronicFilterWheel.vbproj">
		  <Project>{519598FC-3714-480C-AD66-8773A5CDBCE5}</Project>
		  <Name>ASIElectronicFilterWheel</Name>
		</ProjectReference>
	  </ItemGroup>
	</When>
	<Otherwise>
	  <ItemGroup>
		<Reference Include="ASIElectronicFilterWheel">
		  <HintPath>Externals\ASIElectronicFilterWheel\$(BinSubfolder)\ASIElectronicFilterWheel.exe</HintPath>
		</Reference>
	  </ItemGroup>
    </Otherwise>
  </Choose>
</Project>