<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
  <Choose>
    <When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\FractalOptimizationSteps\FractalOptimizationSteps.vbproj')">
      <ItemGroup>
		<ProjectReference Include="..\FractalOptimizationSteps\FractalOptimizationSteps.vbproj">
		  <Project>{8F83E49D-9EF2-4593-95E3-D0952C730D4B}</Project>
		  <Name>FractalOptimizationSteps</Name>
		</ProjectReference>	
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <Reference Include="FractalOptimizationSteps">
          <HintPath>Externals\FractalOptimizationSteps\$(BinSubfolder)\FractalOptimizationSteps.dll</HintPath>
        </Reference>
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>