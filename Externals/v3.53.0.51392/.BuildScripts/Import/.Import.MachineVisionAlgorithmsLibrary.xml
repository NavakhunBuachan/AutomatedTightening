<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
  <Choose>
	<When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\MachineVisionAlgorithmsLibrary')">
	  <ItemGroup>
		<ProjectReference Include="..\MachineVisionAlgorithmsLibrary\MachineVisionAlgorithmsLibrary.csproj">
		  <Project>{9674cbcf-ca9d-43c4-9eba-c94b72438004}</Project>
		  <Name>MachineVisionAlgorithmsLibrary</Name>
		</ProjectReference>
	  </ItemGroup>
	</When>
	<Otherwise>
	  <ItemGroup>
		<Reference Include="MachineVisionAlgorithmsLibrary">
		  <HintPath>Externals\MachineVisionAlgorithmsLibrary\$(BinSubfolder)\MachineVisionAlgorithmsLibrary.dll</HintPath>
		</Reference>
	  </ItemGroup>
    </Otherwise>
  </Choose>
</Project>