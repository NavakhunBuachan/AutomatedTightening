<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
  <Choose>
    <When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\FractalBeamProfileSteps\FractalBeamProfileSteps.vbproj')">
      <ItemGroup>
		<ProjectReference Include="..\FractalBeamProfileSteps\FractalBeamProfileSteps.vbproj">
		  <Project>{4BCF571F-84BA-412A-AEA4-C72F375EF1A8}</Project>
		  <Name>FractalBeamProfileSteps</Name>
		</ProjectReference>	
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <Reference Include="FractalBeamProfileSteps">
          <HintPath>Externals\FractalBeamProfileSteps\$(BinSubfolder)\FractalBeamProfileSteps.dll</HintPath>
        </Reference>
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>