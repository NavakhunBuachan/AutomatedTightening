<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
  <Choose>
    <When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\FractalRealTimeSteps\FractalRealTimeSteps.vbproj')">
      <ItemGroup>
		<ProjectReference Include="..\FractalRealTimeSteps\FractalRealTimeSteps.vbproj">
		  <Project>{5D7DDAB9-20F0-43D3-AD7D-5A98C498EF73}</Project>
		  <Name>FractalRealTimeSteps</Name>
		</ProjectReference>	
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <Reference Include="FractalRealTimeSteps">
          <HintPath>Externals\FractalRealTimeSteps\$(BinSubfolder)\FractalRealTimeSteps.dll</HintPath>
        </Reference>
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>