<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
  <Choose>
	<When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\MMP')">
	  <ItemGroup>
		<ProjectReference Include="..\MMP\MMP.vbproj">
		  <Project>{1237eac0-fd25-4ffb-81df-e6c5956909cb}</Project>
		  <Name>MMP</Name>
		</ProjectReference>
	  </ItemGroup>
	</When>
	<Otherwise>
	  <ItemGroup>
		<Reference Include="MMP">
		  <HintPath>Externals\MMP\$(BinSubfolder)\MMP.exe</HintPath>
		</Reference>
	  </ItemGroup>
    </Otherwise>
  </Choose>  
</Project>