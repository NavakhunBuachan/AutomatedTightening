<!--
This file can be imported into any project to add a conditional project reference to FractalHardwareSupport, 
with the build configuration based on the .NET Framework and platform.

Example usage (update path relative to file containing the Import node):
 <Import Project=".BuildScripts\Import\Import.FractalHardwareSupport.xml" Condition="'$(ImportedFractalHardwareSupport)' != 'true'"/>

Dependency tree (top-down): ? TODO

Nested Dependencies: ? TODO

Selection priority:
1. external source code, if '$(ReferenceSourceCode)' == 'true' AND source code exists
2. external binary, if exists. 
   - If $(ReferenceSourceCode), search bottom up; 
   - If not $(ReferenceSourceCode) or not found, search top-down in Externals of project
3. (TODO) internal NuGet server, hosted at http://osatnugetserver.li.lumentuminc.net/nuget 

By using a shared file, all projects are guaranteed to reference the same version,
and if we want to upgrade, only one file needs to be updated.
-->
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <!-- Set Imported = true, to use as a condition to prevent multiple nested imports -->
    <ImportedFractalHardwareSupport>true</ImportedFractalHardwareSupport>
  </PropertyGroup>
  <!--Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
  <Choose>
    <When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\FractalHardwareSupport\FractalHardwareSupport.vbproj')">
      <ItemGroup>
        <ProjectReference Include="..\FractalHardwareSupport\FractalHardwareSupport.vbproj">
          <Project>{9997ddcc-3267-469c-bf68-6d56f8b8c727}</Project>
          <Name>FractalHardwareSupport</Name>
        </ProjectReference>
      </ItemGroup>
    </When>
    <When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\Fractal')">
      <ItemGroup>
        <!--Use the external from the Fractal project -->
        <Reference Include="FractalHardwareSupport">
          <HintPath>..\Fractal\Externals\FractalHardwareSupport\$(BinSubfolder)\FractalHardwareSupport.dll</HintPath>
        </Reference>
      </ItemGroup>
    </When>
    <When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\FractalSteps')">
      <ItemGroup>
        <!--Use the binary from the Fractal external of the FractalSteps project -->
        <Reference Include="FractalHardwareSupport">
          <HintPath>..\FractalSteps\Externals\Fractal\$(BinSubfolder)\FractalHardwareSupport.dll</HintPath>
        </Reference>
      </ItemGroup>
    </When>
    <When Condition="Exists('Externals\FractalSteps\')">
      <ItemGroup>
        <!--Use the binary from the FractalSteps external of the project -->
        <Reference Include="FractalHardwareSupport">
          <HintPath>Externals\FractalSteps\$(BinSubfolder)\FractalHardwareSupport.dll</HintPath>
        </Reference>
      </ItemGroup>
    </When>
    <When Condition="Exists('Externals\Fractal')">
      <ItemGroup>
        <!--Use the binary from the Fractal external of the project -->
        <Reference Include="FractalHardwareSupport">
          <HintPath>Externals\Fractal\$(BinSubfolder)\FractalHardwareSupport.dll</HintPath>
        </Reference>
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <Reference Include="FractalHardwareSupport">
          <HintPath>Externals\FractalHardwareSupport\$(BinSubfolder)\FractalHardwareSupport.dll</HintPath>
        </Reference>
      </ItemGroup>
    </Otherwise>
  </Choose>
  <!-- Import nested dependencies -->
  <ImportGroup>
    <Import Project=".Import.FractalDataLibrary.xml" Condition="'$(ImportedFractalDataLibrary)' != 'true'"/>
    <Import Project=".Import.FractalControlLibrary.xml" Condition="'$(ImportedFractalControlLibrary)' != 'true'"/>
    <Import Project=".Import.JdsuFiles.xml" Condition="'$(ImportedJdsuFiles)' != 'true'"/>
  </ImportGroup>
</Project>
