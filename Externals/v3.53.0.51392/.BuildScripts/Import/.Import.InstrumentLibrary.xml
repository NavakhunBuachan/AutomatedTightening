<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
  <Choose>
	<When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\InstrumentLibrary')">
	  <ItemGroup>
	    <!-- Reference the project from source code in the solution -->
		<ProjectReference Include="..\InstrumentLibrary\InstrumentLibrary.vbproj">
		  <Project>{2638578D-1D7E-48ED-97A9-13606855B953}</Project>
		  <Name>InstrumentLibrary</Name>
		</ProjectReference>
	  </ItemGroup>
	</When>
	<Otherwise>
	  <ItemGroup>
		<Reference Include="InstrumentLibrary">
		  <HintPath>Externals\InstrumentLibrary\$(BinSubfolder)\InstrumentLibrary.exe</HintPath>
		</Reference>	  
	  </ItemGroup>
    </Otherwise>
  </Choose>  
</Project>