<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
  <Choose>
	  <When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\LCOSKnifeEdge\LCOSKnifeEdge.csproj')">
	    <ItemGroup>
		    <ProjectReference Include="..\LCOSKnifeEdge\LCOSKnifeEdge.csproj">
		      <Project>{ADF9F11C-96D2-4E79-800C-A80BFB76D0CF}</Project>
		      <Name>LCOSKnifeEdge</Name>
		    </ProjectReference>  
	    </ItemGroup>
	  </When>
	  <Otherwise>
	    <ItemGroup>
		    <Reference Include="LCOSKnifeEdge">
		      <HintPath>Externals\LCOSKnifeEdge\LCOSKnifeEdge.dll</HintPath>
		    </Reference>
	    </ItemGroup>
    </Otherwise>
  </Choose>  
</Project>