<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
  <Choose>
	<When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\LaserRibbonStripperHardware')">
	  <ItemGroup>
		<ProjectReference Include="..\LaserRibbonStripperHardware\LaserRibbonStripperHardware.csproj">
		  <Project>{dfc1d402-936f-4431-94a5-46bbf4cc522e}</Project>
		  <Name>LaserRibbonStripperHardware</Name>
		</ProjectReference>
	  </ItemGroup>
	</When>
	<Otherwise>
	  <ItemGroup>
		<Reference Include="LaserRibbonStripperHardware">
		  <HintPath>Externals\LaserRibbonStripperHardware\$(BinSubfolder)\LaserRibbonStripperHardware.exe</HintPath>
		</Reference>
	  </ItemGroup>
    </Otherwise>
  </Choose>  
</Project>