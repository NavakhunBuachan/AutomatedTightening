<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
  <Choose>
	<When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\BeamLocationHardware')">
	  <ItemGroup>
		<ProjectReference Include="..\BeamLocationHardware\BeamLocationHardware.vbproj">
		  <Project>{23a47e4a-97f1-4ac4-b581-db9813d76707}</Project>
		  <Name>BeamLocationHardware</Name>
		</ProjectReference>
	  </ItemGroup>
	</When>
	<Otherwise>
	  <ItemGroup>
		<Reference Include="BeamLocationHardware">
		  <HintPath>Externals\BeamLocationHardware\$(BinSubfolder)\BeamLocationHardware.exe</HintPath>
		</Reference>
	  </ItemGroup>
    </Otherwise>
  </Choose>  
</Project>