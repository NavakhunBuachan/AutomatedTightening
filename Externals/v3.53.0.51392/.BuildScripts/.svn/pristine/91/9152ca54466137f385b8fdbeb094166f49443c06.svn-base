<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
  <Choose>
    <When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\ExpertSystem\ExpertSystem.vbproj')">
      <ItemGroup>
		<ProjectReference Include="..\ExpertSystem\ExpertSystem.vbproj">
		  <Project>{4E3BD5C8-E0A6-4D59-8B6F-4948E244D97B}</Project>
		  <Name>ExpertSystem</Name>
		</ProjectReference>
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <Reference Include="ExpertSystem">
          <HintPath>Externals\ExpertSystem\$(BinSubfolder)\ExpertSystem.dll</HintPath>
        </Reference>
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>