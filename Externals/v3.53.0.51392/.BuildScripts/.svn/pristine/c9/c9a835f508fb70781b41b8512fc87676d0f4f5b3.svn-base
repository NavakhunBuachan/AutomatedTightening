<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
  <Choose>
	<When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\LiteAutoSolderSeal_TestStation')">
	  <ItemGroup>
		<ProjectReference Include="..\LiteAutoSolderSeal_TestStation\LiteAutoSolderSeal_TestStation.csproj">
		  <Project>{BE68E97B-805F-40CE-9D22-572193106922}</Project>
		  <Name>LiteAutoSolderSeal_TestStation</Name>
		</ProjectReference>
	  </ItemGroup>
	</When>
	<Otherwise>
	  <ItemGroup>
		<Reference Include="LiteAutoSolderSeal_TestStation">
		  <HintPath>Externals\LiteAutoSolderSeal_TestStation\$(BinSubfolder)\LiteAutoSolderSeal_TestStation.exe</HintPath>
		</Reference>
	  </ItemGroup>
    </Otherwise>
  </Choose>  
</Project>