<!-- 
This file can be imported into any project to add a NuGet reference to Flee.

By using a shared file, all projects are guaranteed to reference the same version, 
and if we want to upgrade, only one file needs to be updated.

Example usage:
	<Import Project=".BuildScripts\NuGet\Flee.xml" Condition="'$(ImportedFlee)' != 'true'" />
-->
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <!-- Set Imported = true, to use as a condition to prevent multiple nested imports -->
    <ImportedFlee>true</ImportedFlee>
  </PropertyGroup>
  <Choose>
    <When Condition=" '$(FrameworkConfiguration)' == 'net40' ">
      <!-- Only supports .NET Standard 2.0+ (.NET Framework 4.6.1+) -->
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="Flee">
          <Version>2.0.0</Version>
        </PackageReference>
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>