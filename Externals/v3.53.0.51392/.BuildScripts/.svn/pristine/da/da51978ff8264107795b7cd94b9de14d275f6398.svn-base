<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
  <Choose>
	<When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\DeltaTauHardware')">
	  <ItemGroup>
		<ProjectReference Include="..\DeltaTauHardware\DeltaTauHardware.csproj">
		  <Project>{4480ab40-a03c-4fb7-ab0a-802978370f6a}</Project>
		  <Name>DeltaTauHardware</Name>
		</ProjectReference>
	  </ItemGroup>
	</When>
	<Otherwise>
	  <ItemGroup>
		<Reference Include="DeltaTauHardware">
		  <HintPath>Externals\DeltaTauHardware\$(BinSubfolder)\DeltaTauHardware.exe</HintPath>
		</Reference>
	  </ItemGroup>
    </Otherwise>
  </Choose>  
</Project>