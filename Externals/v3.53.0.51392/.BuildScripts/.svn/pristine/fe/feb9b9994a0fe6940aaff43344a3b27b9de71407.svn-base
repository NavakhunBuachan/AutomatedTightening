<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <!-- Reference source code, if it exists, and the configuration is -source; 
  Otherwise, reference External binary files -->
  <Choose>
    <When Condition="'$(ReferenceSourceCode)' == 'true' And Exists('..\ExpertSystemConfigurationEditor\esConfig.vbproj')">
      <ItemGroup>
		<ProjectReference Include="..\ExpertSystemConfigurationEditor\esConfig.vbproj">
		  <Project>{71ead09b-fa9f-4b57-9451-62335de2092d}</Project>
		  <Name>esConfig</Name>
		</ProjectReference>
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <Reference Include="esConfig">
		  <ExecutableExtension>.exe</ExecutableExtension>
          <HintPath>Externals\ExpertSystemConfigurationEditor\$(BinSubfolder)\esConfig.exe</HintPath>
        </Reference>
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>